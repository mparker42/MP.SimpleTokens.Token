#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.


FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["MP.SimpleTokens.Token/MP.SimpleTokens.Token.csproj", "MP.SimpleTokens.Token/"]
RUN dotnet restore "MP.SimpleTokens.Token/MP.SimpleTokens.Token.csproj"
COPY . .
WORKDIR "/src/MP.SimpleTokens.Token"
RUN dotnet build "MP.SimpleTokens.Token.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MP.SimpleTokens.Token.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
EXPOSE 80
EXPOSE 443
CMD ["dotnet", "MP.SimpleTokens.Token.dll"]